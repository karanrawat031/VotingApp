<% include ./partials/header %>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.2.2/Chart.min.js"></script>
<br><br><br><br>
<div class='ui main text container'>
	<div class="ui huge header">
		<h2>Voting App-FCC</h2>
		<p>Used for adding polls</p>
	</div>
	<div class='ui top attached segment'>
		<div class='ui divided items'>
			   <div class='item'>
			   		<div class='content'>
			   			<p class='header'><%= foundOne.question %></p>
			   		</div><hr>
			   </div>
		</div>
    <% foundOne.choice.forEach(function(choice){ %>
      <div class="field">
        <div class="ui radio checkbox">
          <input type="radio" name="choice[]">
          <label><%=choice%></label>
        </div>
      </div>
    <% }); %>
    <a class='addVote mini ui orange basic button' style="margin-top:7px;">Vote</a>
	</div>
  <canvas id="myChart" width="400" height="400"></canvas>
</div>

<script>
$(document).ready(function() {
  var addVote = $(".addVote"); //addvote Call
  $(addVote).click(function(e){
    e.preventDefault();

  });
});
var ctx = document.getElementById("myChart");
var array = new Array();
<% foundOne.choice.forEach(function(choice){ %>
   array.push('<%=choice%>');
<% }); %>
// var array2 = new Array();
// <% foundOne.choice.forEach(function(choice){ %>
//    array.push('<%=choice.votes%>');
// <% }); %>
var myChart = new Chart(ctx, {
type: 'bar',
data: {
    labels: array,
    datasets: [{
        label: '# of Votes',
        data: [1, 2],
        backgroundColor: [
            'rgba(255, 99, 132, 0.2)',
            'rgba(54, 162, 235, 0.2)',
            'rgba(255, 206, 86, 0.2)',
            'rgba(75, 192, 192, 0.2)',
            'rgba(153, 102, 255, 0.2)',
            'rgba(255, 159, 64, 0.2)'
        ],
        borderColor: [
            'rgba(255,99,132,1)',
            'rgba(54, 162, 235, 1)',
            'rgba(255, 206, 86, 1)',
            'rgba(75, 192, 192, 1)',
            'rgba(153, 102, 255, 1)',
            'rgba(255, 159, 64, 1)'
        ],
        borderWidth: 0.5
    }]
},
options: {
    scales: {
        yAxes: [{
            ticks: {
                beginAtZero:true
            }
        }]
    }
}
});
</script>

<% include ./partials/footer %>
